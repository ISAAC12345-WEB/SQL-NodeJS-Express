 <% if (zapatillas) { %>
        <div class="container mt-4">
            <div class="card border-dark">
                <div class="card-header">EDITAR REGISTRO</div>
                <div class="card-body">
                    <form action="/actualizar" method="POST">
                        <input id="id" name="id" value="<%= zapatillas.id_zapatilla %>" hidden>
                        <div class="mb-3">
                            <label for="modelo">MODELO</label>
                            <input type="text" class="form-control" id="modelo" name="modelo" value="<%= zapatillas.modelo %>">
                        </div>
                        <div class="mb-3">
                            <label for="color">COLOR</label>
                            <input type="text" class="form-control" id="colores" name="colores" value="<%= zapatillas.colores %>" >
                        </div>
                        <div class="mb-3">
                            <label for="talla">TALLA</label>
                            <input type="text" class="form-control" id="talla" name="talla" value="<%= zapatillas.talla %>" >
                        </div>
                        <div class="mb-3">
                          <label for="genero">GENERO</label>
                          <input type="text" class="form-control" id="genero" name="genero" value="<%= zapatillas.genero %>" >
                      </div>
                        <div class="mb-3">
                          <label for="pais">PAIS</label>
                          <input type="text" class="form-control" id="pais" name="pais" value="<%= zapatillas.pais %>"  >
                      </div>
                        <div class="mb-3">
                            <label for="precio">PRECIO</label>
                            <input type="text" class="form-control" id="precio" name="precio" value="<%= zapatillas.precio %>" >
                        </div>
                        <button type="submit" class="btn btn-outline-success">GUARDAR</button>
                        <a href="/" class="btn btn-outline-secondary">CANCELAR</a>
                    </form>
                </div>
            </div>
        </div>
    <% } %>
