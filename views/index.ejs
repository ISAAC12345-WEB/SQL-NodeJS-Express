    <div class="container">
        <a href="/create" class="btn btn-primary mt-5">CREAR NUEVO PRODUCTO</a>
        <a href="/filter" class="btn btn-warning mt-5">FILTRO VENTAS TOTALES</a>
        <a href="/filterpais" class="btn btn-info mt-5">FILTRO VENTAS POR PAIS</a>
        <!--<i class='bx bx-location-plus bx-md'></i>-->
        <table class="table table-bordered table-center text-center mt-4">
          <thead>
            
            <tr class="bg-primary text-white">
                <th scope="col">ID</th>
                <th scope="col">MODELO</th>
                <th scope="col">COLORES</th>
                <th scope="col">TALLA</th>
                <th scope="col">GENERO</th>
                <th scope="col">PAIS</th>
                <th scope="col">PRECIO</th>
                <th scope="col">ACCIONES</th>
            </tr> 
          </thead>
          <tbody class="bg-secondary">
            <!--Poner un foreach para que recorra el contenido, leemos la BD creada-->
            <% result.forEach((zapatillas)=>{  %>
              <tr>
                <td><%= zapatillas.id_zapatilla %></td>
                <td><%= zapatillas.modelo %></td>
                <td><%= zapatillas.colores %></td>
                <td><%= zapatillas.talla %></td>
                <td><%= zapatillas.genero %></td>
                <td><%= zapatillas.pais %></td>
                <td><%= zapatillas.precio %> €</td>
                <td>
                  <a href="/edit/<%= zapatillas.id_zapatilla %>" class="btn btn-success">EDITAR</a>
                  <a href="/delete/<%= zapatillas.id_zapatilla %>" class="btn btn-danger">ELIMINAR</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
